{
  "name": "serverless-microservices",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "AWS Serverless Microservices Blueprint with CDK and TypeScript",
  "scripts": {
    "build": "pnpm -r run build",
    "lint": "pnpm -r run lint",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "typecheck": "pnpm -r run typecheck",
    "clean": "pnpm -r run clean && rm -rf node_modules",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --config vitest.config.ts",
    "deploy:all": "./scripts/deploy-all.sh",
    "deploy:all:prod": "./scripts/deploy-all.sh prod",
    "deploy:fast": "./scripts/fast-deploy.sh",
    "deploy:fast:prod": "./scripts/fast-deploy.sh prod",
    "deploy:stack": "./scripts/deploy-stack.sh"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.32.0",
    "happy-dom": "^18.0.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.13.1"
}
