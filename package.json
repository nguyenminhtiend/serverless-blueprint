{
  "name": "serverless-microservices",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "AWS Serverless Microservices Blueprint with CDK and TypeScript",
  "scripts": {
    "build": "pnpm -r run build",
    "build:changed": "pnpm -r --filter='{.}[HEAD~1]' run build",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "typecheck": "pnpm -r run typecheck",
    "clean": "pnpm -r run clean && rm -rf node_modules",
    "_comment_deploy": "=== DEPLOYMENT COMMANDS ===",
    "deploy:infra": "./scripts/deploy-infra.sh",
    "deploy:infra:dev": "./scripts/deploy-infra.sh dev",
    "deploy:infra:prod": "./scripts/deploy-infra.sh prod",
    "deploy:services": "./scripts/deploy-services.sh",
    "deploy:services:dev": "./scripts/deploy-services.sh dev",
    "deploy:services:prod": "./scripts/deploy-services.sh prod",
    "_comment_stack": "=== SPECIFIC STACK DEPLOYMENT ===",
    "deploy:db": "./scripts/deploy-infra.sh dev database",
    "deploy:auth": "./scripts/deploy-infra.sh dev cognito",
    "deploy:api": "./scripts/deploy-infra.sh dev apigateway",
    "deploy:lambda": "./scripts/deploy-infra.sh dev lambda",
    "_comment_no_hotswap": "=== NO-HOTSWAP DEPLOYMENT (for infrastructure changes) ===",
    "deploy:lambda:no-hotswap": "cd infrastructure && cdk deploy ServerlessMicroservices-Lambda-dev --context environment=dev",
    "deploy:lambda:no-hotswap:prod": "cd infrastructure && cdk deploy ServerlessMicroservices-Lambda-prod --context environment=prod",
    "_comment_service": "=== SPECIFIC SERVICE DEPLOYMENT ===",
    "deploy:service:auth": "./scripts/deploy-services.sh dev auth",
    "deploy:service:users": "./scripts/deploy-services.sh dev users",
    "deploy:service:orders": "./scripts/deploy-services.sh dev orders",
    "deploy:service:notifications": "./scripts/deploy-services.sh dev notifications",
    "_comment_utils": "=== UTILITY COMMANDS ===",
    "diff": "./scripts/deploy-infra.sh diff",
    "diff:dev": "cd infrastructure && pnpm run diff:dev",
    "diff:prod": "cd infrastructure && pnpm run diff:prod",
    "synth": "cd infrastructure && pnpm run synth",
    "synth:dev": "cd infrastructure && pnpm run synth:dev",
    "synth:prod": "cd infrastructure && pnpm run synth:prod",
    "destroy": "cd infrastructure && pnpm cdk destroy --all",
    "bootstrap": "cd infrastructure && pnpm cdk bootstrap",
    "_comment_sam": "=== MINIMAL SAM TESTING ===",
    "sam:build": "cp package-sam.json packages/service-auth/package.json && sam build --cached && git checkout packages/service-auth/package.json",
    "sam:test": "sam local invoke TestPostFunction --event events/test-post.json",
    "sam:start": "sam local start-api --warm-containers EAGER"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.16.5",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.8.0",
    "jest": "^30.0.5",
    "prettier": "^3.3.0",
    "rimraf": "^6.0.0",
    "ts-jest": "^29.2.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.13.1"
}
